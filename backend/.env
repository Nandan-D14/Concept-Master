# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
# For free MongoDB Atlas: https://www.mongodb.com/atlas/database
# Create a free cluster and replace with your connection string
MONGODB_URI=mongodb://localhost:27017/concept-master

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AI Configuration
# Get free API key from: https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key-here

# Email Configuration (Optional - for notifications)
# Use free tier from providers like SendGrid, Mailgun, etc.
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# SMS Configuration (Optional - for OTP)
# Use free tier from providers like Twilio, AWS SNS, etc.
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Redis Configuration (Optional - for caching)
# Use free tier from Redis Labs or local Redis
REDIS_URL=redis://localhost:6379

# Payment Configuration (Optional - for subscriptions)
# Use free tier from Razorpay, Stripe, etc.
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Analytics Configuration (Optional)
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
